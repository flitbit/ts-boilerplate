root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
indent_style = tab

[*.{js,jsx,json,ts,tsx,yml}]
indent_size = 2
indent_style = space
