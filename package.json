{
  "name": "ts-boilerplate",
  "version": "0.0.0",
  "description": "basic typescript boilerplate project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">= 12.13"
  },
  "scripts": {
    "clean": "rimraf coverage dist tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "lint": "eslint . --ext .ts,.tsx",
    "prejest": "npm run lint",
    "jest": "jest",
    "pretest": "npm run lint",
    "test": "jest --coverage",
    "test:watch": "chokidar \"*.js\" \"*.json\" \"src/**/*.ts\" \"__tests__/**/*.ts\" --command \"npm run jest\" --initial"
  },
  "devDependencies": {
    "@types/assert-plus": "^1.0.4",
    "@types/jest": "~25.2.3",
    "@types/node": "~14.0.5",
    "@typescript-eslint/eslint-plugin": "~3.0.1",
    "@typescript-eslint/parser": "~3.0.1",
    "chokidar-cli": "^2.1.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-plugin-jest": "~23.13.1",
    "jest": "~26.0.1",
    "prettier": "~2.0.5",
    "rimraf": "~3.0.2",
    "ts-jest": "~26.0.0",
    "typescript": "~3.9.3"
  },
  "dependencies": {
    "assert-plus": "^1.0.0",
    "debug": "^4.1.1"
  },
  "author": "Phillip Clark <phillip@flitbit.com>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/flitbit/ts-boilerplate"
  },
  "bugs": {
    "url": "https://github.com/flitbit/ts-boilerplate/issues"
  },
  "homepage": "https://github.com/flitbit/ts-boilerplate#readme"
}
